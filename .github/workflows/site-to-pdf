name: Convert GitHub Pages to PDF

on:
  push:
    branches:
      - trial

jobs:
  convert:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v4

    - name: Install wkhtmltopdf
      run: |
        sudo apt-get update
        sudo apt-get install -y wkhtmltopdf

    - name: Convert GitHub Pages to PDF
      run: |
        wkhtmltopdf "https://butriman.github.io/" butriman_cv.pdf

    - name: Upload PDF
      uses: actions/upload-artifact@v2
      with:
        name: CV-PDF
        path: butriman_cv.pdf
